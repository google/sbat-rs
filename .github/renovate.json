{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "rangeStrategy": "update-lockfile",
  "packageRules": [
    {
      "matchPackageNames": [
        "crate-ci/typos"
      ],
      "extends": [
        "schedule:monthly"
      ]
    }
  ]
}
